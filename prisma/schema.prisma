generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}


model User {
  id        String    @id @default(uuid())

  firstName String?
  lastName  String?

  CreatedAt DateTime  @default(now())
  @@index([id])
}

model Report {
  id        String    @id @default(uuid())
  title String? 
  description String?  @db.LongText
  CreatedAt DateTime  @default(now())
  @@index([id])
}